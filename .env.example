# =============================================================================
# SUPABASE
# =============================================================================
# Get these from your Supabase project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# DATABASE (Prisma)
# =============================================================================
# Get connection string from Supabase Settings > Database > Connection string
# Use the "Transaction pooler" URI for DATABASE_URL
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Use the "Session pooler" or "Direct connection" URI for DIRECT_URL (migrations)
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# =============================================================================
# AKAHU (NZ Open Banking)
# =============================================================================
# Get these from your Akahu developer dashboard
AKAHU_APP_TOKEN=your-akahu-app-token
AKAHU_APP_SECRET=your-akahu-app-secret
AKAHU_REDIRECT_URI=http://localhost:3000/api/accounts/callback

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
